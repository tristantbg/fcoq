@import 'nib'
@import '../../node_modules/jeet/jeet.styl';
@import '_mixins.styl'

// Media queries
$xl = 1600px
$lg = 1260px
$md = 1023px
$sm = 767px

// Colors
$primary ?= #fff
$secondary ?= #000
$print ?= rgb(255,0,0)
$motion ?= rgb(0,255,0)
$services ?= rgb(0,0,255)

// Metrics
$padding = 1rem
$frame = 3rem
$kinetic = cubic-bezier(0.77, 0, 0.175, 1)

// CSS Reset
global-reset()

webfont('FC', 'FC', true, 'normal')

body,html
	width 100%
	-webkit-text-size-adjust 100%
	background $primary

html
	font-size 62.5%

body
	font-family 'FC', Helvetica Neue, Arial, sans-serif
	font-size 1.5rem
	letter-spacing .015em
	line-height 1.1
	text-rendering optimizeLegibility
	font-smoothing()
	font-variant-ligatures: contextual;
	-moz-font-feature-settings: "calt";
	-webkit-font-feature-settings: "calt";
	font-feature-settings: "calt";

p
	margin-bottom 1em
	line-height 1.1
	&:last-child
		margin-bottom 0

::selection
	color $primary
	background $secondary
	
::-moz-selection
	color $primary
	background $secondary

::-webkit-scrollbar
	display none

*
	//hideselect()
	box-sizing(border-box)

.lazyimg, .plyr--video
	transition opacity 200ms ease
	// transition opacity 100ms ease, filter 800ms $kinetic, transform 400ms ease 400ms
	opacity 0
	//filter: 'invert(.1) contrast(.5) brightness(10)' % ()
	//transform scale(0.95)

.lazyimg.lazyloaded, .lazyimg.flickity-lazyloaded, .plyr--video.plyr--ready
	opacity 1
	filter: none
	transform none

video::-webkit-media-controls
	display none

/* Could Use thise as well for Individual Controls */
video::-webkit-media-controls-play-button {}

video::-webkit-media-controls-volume-slider {}

video::-webkit-media-controls-mute-button {}

video::-webkit-media-controls-timeline {}

video::-webkit-media-controls-current-time-display {}

a, a:hover, a:visited, a:focus
	color inherit
	text-decoration none
	cursor pointer

#outdated
	display none
	text-align center
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background $primary
	z-index 900
	a
		border-bottom 1px solid
	.inner
		padding 8rem 20%

.no-js, .no-svg, .no-flexbox
	#outdated
		display block

