@keyframes rotate {
    100% {
        transform(rotate(360deg))
    }
}

@keyframes dash {
    0% {
        stroke-dasharray: 1, 200;
        stroke-dashoffset: 0
    }
    30% {
        stroke-dasharray: 89, 200;
        stroke-dashoffset: -35px
    }
    100% {
        stroke-dasharray: 89, 200;
        stroke-dashoffset: -124px
    }
}

.loader
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	//background $primary url('../../images/loader.gif') center no-repeat
	background $primary
	background-size 15px
	z-index 10000

#container
	span(1)
	&.hide-images
		.project-thumb
			opacity 0

header
	hideselect()
	position fixed
	top $padding
	left $padding
	white-space nowrap
	z-index 500

#page-content
	span(1)
	padding 0 $padding
	margin-top $padding

#sidebar, #sidebar-hover
	position fixed
	top $padding
	right $padding
	z-index 300
	span(3/12)
	.category
		span(1)
		padding-right 33%
		margin-bottom 3em
		position relative
	.category-title
		text-transform uppercase
		position absolute
		top 0
		right 0
		transform rotate(90deg) translateX(100%)
		transform-origin top right
	.category-item
		span(1)
		.index
			float left
			clear none
			text-align inherit
			margin-left 0
			margin-right 1em
		.title
			float left
			clear none
			width calc(100% - 2.5em)
			text-align inherit
			margin-left 0
			text-indent -1em
			padding-left 1em
			
#sidebar-hover
	position absolute
	padding-right 10%
	top 0

#slide-number
	position absolute
	bottom $padding
	left $padding
	z-index 500

#project-header
	position absolute
	top $padding
	right $padding
	z-index 500
	.category-title
		text-transform uppercase
		position absolute
		top 0
		right 0
		transform rotate(90deg) translateX(100%)
		transform-origin top right

#bottom-link
	position fixed
	bottom $padding
	right $padding
	text-transform uppercase
	transform rotate(90deg) translateY(100%)
	transform-origin bottom right
	z-index 500

#title-bottom
	position fixed
	bottom $padding
	left $padding
	text-transform uppercase
	transform rotate(-90deg) translateY(100%)
	transform-origin bottom left
	z-index 500

#projects-grid
	padding 0 (100%/12)
	margin-top 0
	display inline-flex
	justify-content space-between
	// align-items center
	flex-wrap wrap
	hideselect()
	+below($md)
		padding 0 $padding
	&::before, &::after
		display none
	.project-item
		span(4/10)
		margin-bottom ($frame*3)
		+below($md)
			width 100%
		&:nth-child(3n)
			margin-left 20%
			margin-right 40%
		&:nth-child(6n)
			margin-left 40%
			margin-right 20%
		a
			display block
		.project-image
			//cursor none
			position relative
			// flexbox()
			// justify-content center
			// align-items center
			img
				display block

#page-content.projects
	#sidebar
		pointer-events none
		.category-title, .project
			pointer-events auto
		.project
			visibility hidden

#page-content.project
	padding 0
	margin-top 0
	.slider
		height 100vh
		hideselect()
		.flickity-slider
			transform(none !important)
		.flickity-viewport
			cursor default
		.slide
			height 100%
			width 100%
			display inline-flex
			justify-content center
			left 0 !important
			visibility hidden
			.content
				height 100%
				padding 8% 0
				display inline-flex
				background url('../../images/loader.gif') center no-repeat
				background-size 15px
			.content.video
				display block
				position relative
				width 60%
				.plyr
					align(vertical)
					width 100%
					.plyr__controls
						//display none
		.slide.is-selected
			visibility visible
			z-index 1
		.flickity-prev-next-button
			//cursor none !important
			top 0
			height 100%
			width 50%
			margin-top 0
			background transparent
			padding 0
			transform(none)
			border none
			border-radius 0
			z-index 10
			+below($md)
				display none
			svg
				display none
			&.previous
				left 0
				text-align left
				cursor url('../../images/arrow-left.svg') 16 16, url('../../images/arrow-left.png') 16 16, w-resize
			&.next
				right 0
				text-align right
				cursor url('../../images/arrow-right.svg') 16 16, url('../../images/arrow-right.png') 16 16, e-resize
			&[disabled]
				display none

#index-hover
	column(4/12, $offset: 1/12)
	position relative
	img
		position absolute
		top 0
		left 0
		display none

#page-content.default
	column(2/12, $offset: 9/12)
	h2
		text-transform uppercase
		margin-top 3em
		margin-bottom 1em
	

body.projects
	#categories
		visibility visible

body.project
	overflow hidden


body.is-loading
	cursor wait !important
	#back, #page-content, #categories
		visibility hidden